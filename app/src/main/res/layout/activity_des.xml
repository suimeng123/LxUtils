<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/encry_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入加密明文"/>
    <TextView
        android:id="@+id/mi_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="加密后的密文"/>
    <TextView
        android:id="@+id/ming_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="解密后的明文"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/des_en_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DES加密"
            android:onClick="OnClick"
            />
        <Button
            android:id="@+id/aes_en_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AES加密"
            android:onClick="OnClick"
            />
        <Button
            android:id="@+id/md5_en_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Md5加密"
            android:onClick="OnClick"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/des_de_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DES解密"
            android:onClick="OnClick"
            />
        <Button
            android:id="@+id/aes_de_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AES解密"
            android:onClick="OnClick"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/rsa_u_en_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSA公钥加密"
            android:onClick="OnClick"
            />
        <Button
            android:id="@+id/rsa_i_de_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSA私钥解密"
            android:onClick="OnClick"
            />
        <Button
            android:id="@+id/rsa_i_en_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSA私钥加密"
            android:onClick="OnClick"
            />
        <Button
            android:id="@+id/rsa_u_de_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSA公钥解密"
            android:onClick="OnClick"
            />
    </LinearLayout>
</LinearLayout>